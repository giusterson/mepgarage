  <div class="container js-filter" style="color: black;">
      <div class="row">
            <div class="filter col-md-3" id="filtres">
                {% include 'vehicule/_filter.html.twig' with {form: form, minPrice: minPrice, maxPrice: maxPrice, minKms: minKms, maxKms: maxKms, minYear: minYear, maxYear: maxYear} only %}
            </div>
            <div class="col-md-9">
                    <div class="d-flex justify-content-end mb-2 js-filter-sorting">
                        {% include "vehicule/_sorting.html.twig" %}
                    </div>
                    <div class="grid js-filter-content" id="vehicules">
                        {% include "vehicule/_vehicules.html.twig" %}
                   </div>
                 {#   <div style="mt-4 js-filter-pagination">
                      {% include "vehicule/_pagination.html.twig" %}
                   </div> #}
            </div>
            </div>
        </div>
   </div>
   
{% endblock %}


