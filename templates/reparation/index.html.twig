{% extends 'base.html.twig' %}

{% block title %}Hello ReparationController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <h1> Liste des réparations </h1>
    <table class="table table-hover">
        <tr class="table-dark">
        <td> Code</td>
        <td>Prix moyen</td>
        <td>Nom reparation </td>
        </tr>
        {% for reparation in reparations %} 
            <tr class="table-secondary">
                <td> {{ reparation.code }}</td>
                <td>  {{ reparation.prixMoyen }} € </td>
                <td> {{ reparation.nomReparation }} </td>
            </tr>    
        {% endfor %}
    </table>
{% endblock %}


