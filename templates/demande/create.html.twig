{% block body %}
 {% if isEditMode %}
        <h2> Modifier la demande </h2>
{% else %}
        <h2>Envoyer une demande</h2>
         
    {% endif %}
{{ form_start(formDemande) }}
{{form_row(formDemande.genreDemande, {
    'attr': {
        'placeholder': "Choisissez le genre de la demande"
    }
})}}

{{form_row(formDemande.vehicule, {
    'attr': {
